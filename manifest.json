{
    "manifest_version": 3,
    "name": "Water Reminder",
    "description": "Reminds you to drink water every 5 minutes.",
    "version": "1.0",
    "permissions": ["alarms", "activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  